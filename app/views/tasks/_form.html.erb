<%= form_for task, html:{class:'todo-form'} do |form| %>
  <div class="form-group">
    <%= form.label :title, "タスク名"  %>
    <%= form.text_field :title %>
  </div>
  <div class="form-group">
    <%= form.label :description, "詳細" %>
    <%= form.text_area :description, rows:10 %>
  </div>
<!--  <div class="form-group">-->
<!--    <label>タグ</label>-->
<!--    <div>-->
    <%# tags.each do |tag| %>
<!--      <label>-->
      <%#= check_box_tag 'tags[]', tag.id, false, id: "tag_#{tag.id}" %>
      <%#= tag.name %>
<!--      </label>-->
    <%# end %>
<!--    </div>-->
<!--  </div>-->
  <div class="form-group">
    <%= form.label :tags, "タグ" %>
    <div>
      <% tags.each do |tag| %>
        <label>
          <%= check_box_tag 'task[tag_ids][]', tag.id, @task.tags.include?(tag) %>
          <%= tag.name %>
        </label>
      <% end %>
    </div>
  </div>

  <%= form.submit submit %>
<% end %>
